<mvc:View 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    controllerName="medical.inventory.controller.Main">

  <m:App>
    <m:Page title="Medical Inventory Management System">

      <m:VBox class="sapUiMediumMargin">

        <m:Text text="Medical Inventory Dashboard" class="headerTitle"/>

        <m:SearchField width="70%" placeholder="Search Medicine" liveChange="onSearch"/>

        <m:Button text="Add Medicine" type="Emphasized" press="onOpenAddDialog" class="sapUiSmallMarginTop"/>

        <m:Table id="medTable" items="{/medicines}" class="sapUiSmallMarginTop">

          <m:columns>
            <m:Column><m:Text text="Medicine"/></m:Column>
            <m:Column><m:Text text="Price â‚¹"/></m:Column>
            <m:Column><m:Text text="Stock"/></m:Column>
            <m:Column><m:Text text="Status"/></m:Column>
            <m:Column><m:Text text="Action"/></m:Column>
          </m:columns>

          <m:items>
            <m:ColumnListItem>
              <m:cells>

                <m:Text text="{name}"/>
                <m:Text text="{price}"/>
                <m:Text text="{stock}"/>

                <!-- Stock Status -->
                <m:ObjectStatus
                  text="{= Number(${stock}) === 0 ? 'OUT OF STOCK' : (Number(${stock}) &lt; 10 ? 'LOW STOCK' : 'AVAILABLE') }"
                  state="{= Number(${stock}) === 0 ? 'Error' : (Number(${stock}) &lt; 10 ? 'Error' : 'Success') }"
                  icon="{= Number(${stock}) === 0 ? 'sap-icon://alert' : '' }"/>

                <!-- Buttons -->
                <m:HBox>
                  <m:Button text="Edit" press="onEdit"/>
                  <m:Button text="Delete" type="Reject" press="onDelete"/>
                </m:HBox>

              </m:cells>
            </m:ColumnListItem>
          </m:items>

        </m:Table>

      </m:VBox>
    </m:Page>
  </m:App>

</mvc:View>
